<%# The below code creates an array of 10 random names %>

  <a href="/">Table of contents</a>
  <hr>
  <%= names = Array.new(10) { Faker::Name.unique.name  } %>


<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="list-group">
        <% names.each do |name| %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <%= name %>
            <span class="badge rounded-pill text-bg-primary"><%= rand(10) %></span>
          </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
